{% extends 'base.html.twig' %}

{% block title %}Форма 2{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <div class="form-tabs">
            <a href="{{ path('lead_form1') }}" class="form-tab">Форма 1</a>
            <div class="form-tab active">Форма 2</div>
        </div>

        <form method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('form2') }}">

            <div class="form-group">
                <label for="contact_name">Имя</label>
                <input type="text" id="contact_name" name="contact_name" class="form-control" placeholder="Ваше имя" required>
            </div>

            <div class="form-group">
                <label for="phone">Телефон</label>
                <input type="tel" id="phone" name="phone" class="form-control" placeholder="+7 (___) ___-__-__" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email_lead" class="form-control" placeholder="Ваш email" required>
            </div>

            <div class="form-group">
                <label for="comment_lead">Комментарий</label>
                <textarea id="comment_lead" name="comment_lead" class="form-control" placeholder="Оставьте ваш комментарий..."></textarea>
            </div>

            <button type="submit" class="btn-submit">Отправить</button>
        </form>
    </div>
{% endblock %}
